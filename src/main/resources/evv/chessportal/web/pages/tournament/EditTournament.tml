<html xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
      t:type="Layout" t:activeTournaments="true">

    <form t:type="Form" class="form-horizontal" t:id="tournamentForm">
        <t:errors/>
        <div class="form-group">        
            <t:label for="name" class="col-md-offset-3 col-md-2"/>
            <div class="col-md-3">
                <input t:id="name" t:type="TextField"
                       t:validate="required" maxlength="30" />
            </div>
        </div>    

        <div class="form-group">   
            <t:label for="startDate" class="col-md-offset-3 col-md-2"/>
            <t:datefield t:id="startDate" t:validate="required"/>
        </div>
        <div class="form-group">   
            <t:label for="endDate" class="col-md-offset-3 col-md-2"/>
            <t:datefield t:id="endDate"/>
        </div>
        <div class="form-group">   
            <t:label for="startEnrolmentDate" class="col-md-offset-3 col-md-2"/>
            <t:datefield t:id="startEnrolmentDate"/>
        </div>
        <div class="form-group">   
            <t:label for="endEnrolmentDate" class="col-md-offset-3 col-md-2"/>
            <t:datefield t:id="endEnrolmentDate"/>   			
        </div>
        
        <div class="form-group">
            <div class="col-md-offset-5 col-md-1">
                <button type="submit" class="btn btn-primary">${message:submit-create}</button>
            </div>
        </div>

    </form>
    
    
</html>

