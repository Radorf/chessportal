<html xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
	t:type="Layout">

<div>
	<form t:type="Form" class="form-horizontal" t:id="searchForm">

		<t:errors />

		<div class="btn-group col-lg-6" style="margin-bottom: 25px;">
			<a class="btn btn-default" href="#" t:type="PageLink"
				t:page="tournament/createTournament">${message:create}</a>
			<div class="col-lg-6">
				<div class="input-group">
					<input class="form-control" t:id="searchKey" t:type="TextField"
						maxlength="30" /> <span class="input-group-btn">
						<button type="submit" class="btn btn-default">${message:search}</button>
					</span>
				</div>
			</div>
		</div>

	</form>


	<div class="w3-padding w3-white notranslate">
		<table class="table table-hover">
			<thead>
				<tr>
					<th>${message:Tournament}</th>
					<th>${message:startDate}</th>
					<th>${message:endDate}</th>
					<th>${message:startEnrolmentDate}</th>
					<th>${message:endEnrolmentDate}</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				<t:loop source="tournamentList" value="tournament">
					<tr>
						<td><a href="#" t:type="PageLink"
							t:page="tournament/tournamentDetails" context="tournament.id">${tournament.name_}</a>
						</td>
						<td>${startDate}</td>
						<td>${endDate}</td>
						<td>${startEnrolmentDate}</td>
						<td>${endEnrolmentDate}</td>
					</tr>
				</t:loop>
			</tbody>
		</table>
	</div>
</div>

</html>

