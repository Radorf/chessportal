<html xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
      t:type="Layout">
<title>Tournaments Managing page</title>
    <p class="text-center">
        <a href="#" t:type="PageLink" t:page="tournament/createTournament">${message:create}</a>	  
    </p>
    <div>
        <form t:type="Form" class="form-horizontal" t:id="searchForm">

            <t:errors/>

            <div class="form-group">        
                <t:label for="searchKey" class="col-md-offset-3 col-md-2"/>
                <div class="col-md-3">
                    <input t:id="searchKey" t:type="TextField"
                           t:validate="required" maxlength="30" />
                </div>
            </div>	    


            <div class="form-group">
                <div class="col-md-offset-5 col-md-1">
                    <button type="submit" class="btn btn-primary">${message:search}</button>
                </div>
            </div>

        </form>


       <div class="w3-padding w3-white notranslate">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>${message:Tournament}</th>
                        <th>${message:startDate}</th>
                        <th>${message:endDate}</th>
                        <th>${message:startEnrolmentDate}</th>
                        <th>${message:endEnrolmentDate}</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <t:loop source="tournamentList" value="tournament" >
                        <tr>
                            <td>
                                <a href="#" t:type="PageLink" t:page="tournament/tournamentDetails" context="tournament.id">${tournament.name_}</a> 
                            </td>
                            <td>
                                ${startDate}
                            </td>
                            <td>
                                ${endDate}
                            </td>
                            <td>
                                ${startEnrolmentDate}
                            </td>
                            <td>
                                ${endEnrolmentDate}
                            </td>
                        </tr>
                    </t:loop> 
                </tbody>
            </table>
        </div>
    </div>

</html>

