<html xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
      t:type="Layout" t:title="title">

    <form t:type="Form" class="form-horizontal" t:id="updateProfileForm">

        <t:errors/>

        <div class="form-group">        
            <t:label for="firstName" class="col-md-offset-3 col-md-2"/>
            <div class="col-md-3">
                <input t:id="firstName" t:type="TextField"
                        t:validate="required" maxlength="30" />
            </div>
        </div>

        <div class="form-group">        
            <t:label for="surname" class="col-md-offset-3 col-md-2"/>
            <div class="col-md-3">    
                <input t:id="surname" t:type="TextField"
                       t:validate="required" maxlength="30" />
            </div>
        </div>

        <div class="form-group">        
            <t:label for="email" class="col-md-offset-3 col-md-2"/>
            <div class="col-md-3">    
                <input t:id="email" t:type="TextField"
                       t:validate="required" maxlength="30" />
            </div>
        </div>

        <div class="form-group">        
            <t:label for="phoneNumber" class="col-md-offset-3 col-md-2"/>
            <div class="col-md-3">    
                <input t:id="phoneNumber" t:type="TextField"
                       t:validate="required" maxlength="30" />
            </div>
        </div>
        
        <div class="form-group">        
            <t:label for="Elo" class="col-md-offset-3 col-md-2"/>
            <div class="col-md-3">
                <input t:id="elo" t:type="TextField"
                       maxlength="30" />
            </div>
        </div>
        
        <div class="form-group">        
            <t:label for="licenseNumber" class="col-md-offset-3 col-md-2"/>
            <div class="col-md-3">
                <input t:id="licenseNumber" t:type="TextField"
                       maxlength="30" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-5 col-md-1">
                <button type="submit" class="btn btn-primary">${message:submit-update}</button>
            </div>
        </div>     

    </form>

</html>