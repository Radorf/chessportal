<html xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
	t:type="Layout">

<div>
	<form t:type="Form" class="form-horizontal" t:id="searchForm">

		<t:errors /> 

			<div class="btn-group col-lg-6" style="margin-bottom:25px;">
				<a class="btn btn-default" href="#" t:type="PageLink"
					t:page="user/createUser">${message:create}</a>
				<div class="col-lg-6">
					<div class="input-group">
						<input class="form-control" t:id="searchKey" t:type="TextField"
							maxlength="30" /> <span class="input-group-btn">
							<button type="submit" class="btn btn-default">${message:search}</button>
						</span>
					</div>
				</div>
			</div>
	</form>


	<div class="w3-padding w3-white notranslate">
		<table class="table table-hover">
			<thead>
				<tr>
					<th>Login</th>
					<th>Name</th>
					<th>Email</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				<t:loop source="userList" value="user">
					<tr>
						<td><a href="#" t:type="PageLink"
							t:page="user/showUserProfile" context="user.id">${user.loginName}</a>
						</td>
						<td>${user.person.firstName} ${user.person.surname}</td>
						<td>${user.person.email}</td>
						<td><a href="#" t:type="PageLink"
							t:page="user/editUserProfile" context="user.id">${message:editProfile}</a>
						</td>
						<td><a href="#" t:type="ActionLink" t:id="deleteUser"
							context="user.id">${message:delete}</a></td>
					</tr>
				</t:loop>
			</tbody>
		</table>
	</div>
</div>

</html>
