<script type="text/javascript">
jQuery(document).ready(function () {
    if(window.location.href.indexOf("user/") != -1) {
    	jQuery("#homeSection").removeClass("active");
    	jQuery("#usersSection").addClass("active");
    	jQuery("#tournamentsSection").removeClass("active");
    } else if(window.location.href.indexOf("tournament/") != -1) {
    	jQuery("#homeSection").removeClass("active");
    	jQuery("#usersSection").removeClass("active");
    	jQuery("#tournamentsSection").addClass("active");
    } else {
    	jQuery("#homeSection").addClass("active");
    	jQuery("#usersSection").removeClass("active");
    	jQuery("#tournamentsSection").removeClass("active");
    }
});
</script>

